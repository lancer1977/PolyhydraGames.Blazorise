@if (IsBusy) {
    <p><span class="fad fa-spin fa-spinner" aria-hidden="true"></span> @Message</p>
} else {
    @ChildContent
}
 
@code {
    [Parameter]
    public string Message { get; set; } = "Loading...";
 
    [Parameter]
    public bool IsBusy { get; set; }
 
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}